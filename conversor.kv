<Conversor>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    # Entrada de dados
    TextInput:
        id: entrada
        hint_text: "Digite o valor"
        font_size: 24
        multiline: False
        on_text: root.entrada = self.text

    # Botões para conversões
    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10

        Button:
            text: "Celsius para Fahrenheit"
            on_press: root.calcular("c_para_f")

        Button:
            text: "Fahrenheit para Celsius"
            on_press: root.calcular("f_para_c")

    # Exibição do resultado
    Label:
        text: "Resultado:"
        font_size: 20

    Label:
        text: root.resultado
        font_size: 28
        color: 0, 1, 0, 1
