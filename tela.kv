<AnguloScreen>:
    name: 'angulo'
    MDScreen:
        MDBoxLayout:
            orientation: 'vertical'
            padding: "20dp"
            spacing: "20dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDLabel:
                text: "Conversor de Ângulos"
                halign: 'center'
                font_style: 'H5'
                font_name: "assets/font/Nunito-Medium.ttf"

            MDTextField:
                id: valor_input
                hint_text: "Digite o valor"
                input_filter: 'float'
                mode: "rectangle"
                size_hint_x: 0.8
                pos_hint: {"center_x": 0.5}

            MDLabel:
                id: resultado
                text: "Resultado:"
                halign: 'center'
                font_style: 'H6'

            MDRaisedButton:
                text: "Graus para Radianos"
                size_hint_x: 0.8
                pos_hint: {"center_x": 0.5}
                on_release: root.converter("graus_para_radianos")

            MDRaisedButton:
                text: "Radianos para Graus"
                size_hint_x: 0.8
                pos_hint: {"center_x": 0.5}
                on_release: root.converter("radianos_para_graus")

            Widget:
                size_hint_y: None
                height: "20dp"

            VoltarMenu:


