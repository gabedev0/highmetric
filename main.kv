ScreenManager:
    MainScreen:
    SecondScreen:

<MainScreen>:
    name: "main"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.theme_cls.bg_light
        padding: "16dp"
        spacing: "16dp"

        MDLabel:
            text: "HighMetric"
            halign: "center"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1] + dp(10)

        GridLayout:
            cols: 3
            spacing: "16dp"
            size_hint_y: None
            height: self.minimum_height

            # Exemplo de um botão
            MDRaisedButton:
                size_hint: None, None
                size: dp(80), dp(80)
                md_bg_color: app.theme_cls.primary_color
                radius: [15, 15, 15, 15]
                on_release: app.root.current = "second"
                MDFloatLayout:
                    MDIcon:
                        icon: "thermometer"
                        halign: "center"
                        valign: "center"
                        size_hint: None, None
                        size: dp(48), dp(48)
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}

            # Adicione mais botões semelhantes para as outras funções

<SecondScreen>:
    name: "second"
    MDBoxLayout:
        orientation: "vertical"
        MDLabel:
            text: "Second Screen"
            halign: "center"
        MDFlatButton:
            text: "Voltar"
            on_release: app.root.current = "main"
